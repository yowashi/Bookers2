<body>
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
						<tr></tr>
					</tbody>
				</table>
			<div class="row">
				<% if @user.id == current_user.id %>
				<p><%= link_to " ", edit_user_path(@user), class:'col-xs-12 btn btn-default glyphicon glyphicon-wrench edit' %>
				</p>
				<% end %>
			</div>
				<h2>New book</h2>
				<%= form_for(@book) do |f| %>
				<div class="field row">
				<h4>title</h4>
				<%= f.text_field :title, class: 'col-xs-12' %>
				</div>
				<div class="field row">
				<h4>opinion</h4>
				<%= f.text_area :body, class: 'col-xs-12' %>
				</div>
				<div class="actions row">
				<%= f.submit 'Create Book',class:'col-xs-12 btn btn-primary' %>
			</div>
				<% end %>
			</div>
			<div class="col-xs-9">
			  <h2>Books</h2>
				<table class="table table-hover　table-inverse">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
						<tr>
							<td><%= link_to user_path(user) do %>
								<%= attachment_image_tag user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "20x20" %>
								<% end %>
								</td>
						<td><%= user.name %></td>
						<td></td>
						<td><%= link_to 'Show',user_path(user) %></td>
					    </tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</body>