<body>
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg" %>
				<table class="table">
					<tbody>
						<tr></tr>
						<tr>
							<th>name</th>
							<th><%= @user.name %></th>
						</tr>
						<tr>
							<th>introduction</th>
							<th><%= @user.introduction %></th>
						</tr>
						<tr></tr>
					</tbody>
				</table>
			<div class="row">
				<a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit">
				</a>
			</div>
				<h2>New book</h2>
				<%= form_for(@booknew) do |f| %>
				<h4>title</h4>
				<%= f.text_field :title ,class:'col-xs-12' %>
				<h4>opinion</h4>
				<%= f.text_area :body ,class:'col-xs-12'%>
				<%= f.submit 'Create Book',class:'col-xs-12 btn btn-primary' %>
				<% end %>
			</div>
			<div class="col-xs-9">
			  <h2>Book detail</h2>
				<table class="table table-hover　table-inverse">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= attachment_image_tag @user, :profile_image,　format: 'jpeg', fallback: "no_image.jpg", size: "20x20" %><br>
								<%= link_to @user.name, user_path(@user) %>
							</td>
						<td>
							<%= link_to @book.title,book_path(@book) %>
						</td>

						<td>
							<%= @book.body %>
						</td>
						<% if @user == current_user %>
						<td>
							<%= link_to "Edit", edit_book_path(@book), class: 'btn-sm btn-success' %>
						</td>

						<td>
							<%= link_to "Destroy",book_path(@book), method: :delete, class: 'btn-sm btn-danger' %>
						</td>
						<% end %>
					    </tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</body>