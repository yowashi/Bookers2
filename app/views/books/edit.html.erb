<div class="body">
	<div class="container">
		<div class="row">
			<h1>Editing Book</h1>
			<%= form_for(@book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>Opinion</h4>
			<%= f.text_area :body %>

			<%= f.submit 'Update Book', class: 'btn btn-primary' %>
			<% end %>
			<%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', books_path %>
		</div>
	</div>
</div>